begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "simple_layout"
    gemspec.summary = "A series of generators for various layouts"
    gemspec.description = "Generate many different layouts so you don't have to remember how to"
    gemspec.email = "christopher.roby@gmail.com"
    gemspec.homepage = "http://github.com/croby/simple_layout"
    gemspec.authors = ["Chris Roby"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end